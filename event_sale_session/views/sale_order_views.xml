<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_sale_order_form_inherit_event" model="ir.ui.view">
             <field name="name">sale.order.form.inherit</field>
             <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form" />
             <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//form//field[@name='event_id']" position="after">
                    <field name="event_sessions_count" invisible="1"/>
                    <field name="session_id"
                           domain="[('event_id', '=', event_id)]"
                           attrs="{
                           'invisible': [('event_sessions_count', '&lt;', 1)],
                           'required': [('event_sessions_count', '&gt;', 0)]
                           }"/>
                    <field name="event_session_seats_available" invisible="0"/>
                </xpath>
                 <xpath expr="//sheet//div[@name='button_box']" position="inside">
                     <button class="oe_stat_button"
                             name="%(event_session.act_event_session_form)d"
                             type="action"
                             icon="fa-cubes"
                             attrs="{'invisible': [('sale_session_count','&lt;','1')]}">
                        <field string="Sessions" name="sale_session_count" widget="statinfo" />
                     </button>
                 </xpath>
             </field>
        </record>

</odoo>
